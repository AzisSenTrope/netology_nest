<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<div>
    <form method="POST" class="mt-5" target="_blank">
        <div class="form-group">
            <label>Логин:</label>
            <% if (error) { %>
                <label><%= error %></label>
            <% } %>
            <input type="text" name="username" class="form-control" required/><br />
            <label>Пароль:</label>
            <input type="password" name="password" class="form-control" required/>
            <label>Почта:</label>
            <input type="text" name="email" class="form-control" required/><br />
            <label>Имя:</label>
            <input type="text" name="displayName" class="form-control" required/>
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="form-control"/>
        </div>
    </form>
</div>

<%- include('../port/layout-end') %>