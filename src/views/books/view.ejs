<%- include('../port/layout-start', {books: books}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= books.title %></h5>
                <p class="card-text"><%= books.description %></p>
                <p class="card-text"><%= books.authors %></p>
                <p class="card-text"><%= books.favorite %></p>
                <p class="card-text"><%= books.fileCover %></p>
                <form action="/api/books/<%= books.id %>/download" method="get">
                    <button type="submit">Скачать <%= books.fileName %></button>
                </form>


                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/api/books/update/<%= books.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/books/delete/<%= books.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
        <div class="card">
            <h5 class="card-title">Обсуждения</h5>
            <%- include('chats', {user: user || {}, isAuthenticated: isAuthenticated}) %>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>
